  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-4">
        <h2 class="text-center mb-5">ðŸ§¸ Your tasks</h2>
      </div>
    </div>
    <% @tasks.each_slice(3) do |task_set| %>
      <div class="row mb-3">
        <div class="col-12 justify-content-center d-flex" style="gap: 16px;">
          <% task_set.each do |task| %>
              <%= link_to(task_path(task)) do %>
                <div class="card" style="width: 18rem;">
                  <div class="card-body">
                    <div class="d-flex" style="gap: 8px;">
                      <% if task.completed %>
                        <input class="form-check-input" type="checkbox" value="" checked>
                      <% else %>
                        <input class="form-check-input" type="checkbox" value="">
                      <% end %>
                      <h5 class="card-title"><%= task.title %></h5>
                    </div>
                    <p class="card-text"><%= task.details %></p>
                  </div>
                </div>
              <% end %>
          <% end %>
        </div>
      </div>
    <% end %>
    <br>
    <div class="row justify-content-center">
      <div class="col-12 text-center">
        <%= link_to "New task", new_task_path, class: "btn btn-primary mt-3" %>
      </div>
    </div>
  </div>
