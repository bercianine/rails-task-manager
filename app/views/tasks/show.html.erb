  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-4">
        <h2 class="text-center mb-5">ðŸ§¸ Your tasks</h2>
      </div>
    </div>
    <div class="row justify-content-center d-flex" style="gap: 16px;">
          <div class="card pt-2" style="width: 48rem;">
            <div class="card-body">
              <div class="d-flex justify-content-between align-items-center">
                <%= link_to "ã€± Back to all tasks", tasks_path, class: "card-text text-secondary" %>
                <div class="d-flex" style="gap: 8px;">
                  <%= link_to "Edit task", edit_task_path(@task), class: "btn btn-outline-secondary" %>
                  <%= link_to "Delete task", task_path(@task), method: :delete, data: {turbo_method: :delete, turbo_confirm: "Delete #{@task.title}?"}, class: "btn btn-outline-danger" %>
                </div>
              </div>
              <h3 class="card-title mb-4 mt-4"><%= @task.title %></h3>
              <div class="d-flex" style="gap: 8px;">
                <% if @task.completed == true %>
                  <input class="form-check-input" type="checkbox" value="" checked>
                  <p>This task is completed.</p>
                <% else %>
                  <input class="form-check-input" type="checkbox" value="">
                  <p>This task is not completed.</p>
                <% end %>
              </div>
              <div class="d-flex" style="gap: 8px;">
                <p class="card-text text-secondary"><i>Details:</i></p>
                <p class="card-text"><%= @task.details %></p>
              </div>
            </div>
          </div>
    </div>
  </div>
