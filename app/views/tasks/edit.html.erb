  <div class="container pt-5">
    <div class="row justify-content-center">
      <div class="col-12 col-lg-4">
        <h2 class="text-center">üñçÔ∏è Edit task:</h2>
        <h3 class="text-center mb-5"><%= @task.title %></h3>
      </div>
    </div>
    <div class="row justify-content-center">
      <div class="col-4">
        <%= form_with model: @task, url: tasks_edit_path(@task) do |f| %>
          <div class="mb-4">
            <%= f.label :title, { class: "form-label" } %>
            <%= f.text_field :title, { class: "form-control" } %>
          </div>
          <div class="mb-4">
            <%= f.label :details, { class: "form-label" } %>
            <%= f.text_field :details, { class: "form-control" } %>
          </div>
          <div class="mb-4">
            <%= f.check_box :completed, { class: "form-check-input me-1" } %>
            <%= f.label :completed, { class: "form-label" } %>
          </div>
          <div class="d-flex" style="gap: 16px;">
            <%= link_to "Cancel", all_path, class: "btn btn-outline-secondary w-100" %>
            <%= f.submit "Save", { class: "btn btn-primary w-100" } %>
          </div>
        <% end %>
      </div>
    </div>
  </div>
